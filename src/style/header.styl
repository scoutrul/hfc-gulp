section#header 
    .container
        display flex
        flex-flow column nowrap
        justify-content center

#logo
    width: 100%;
    margin: 0 auto;
    display: flex;
    align-items: flex-end;
    max-width: 640px;
    img
        width: auto
        max-width: 100%;
        margin: 0 auto;
    

#nav 
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: space-around;
    max-width: 200px;
    margin: 15px auto 0 auto;
    width: 100%;
    &.full {
        max-width: 440px
    }
    li 
        display: flex;
        justify-content: center;
        color: color.gold;
        font-family PFDinDisplayPro
        font-size(24)
        text-transform uppercase
        letter-spacing: 3px;
        @media (max-width: screen.M)
            font-size(12)
        &.devider 
            width: 100%;
            max-width: 24px;
            span
                display: block;
                border-radius: 50%;
                width: 6px;
                height: 6px;
                background-color: color.gold;
        
        a, h1 
            color: inherit
            font-size(24)
            @media (max-width: screen.M)
                font-size(12)
            text-transform: uppercase;
            text-decoration: none;
            transition: .5s ease;
            letter-spacing: 3px;
            padding: 0;

#nav li a:hover, #nav li a:active, #nav li a.active {
    color: white;
}